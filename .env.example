# APEX.BUILD Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/apex_build
POSTGRES_DB=apex_build
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_if_needed

# JWT Configuration - Generate strong secrets
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# AI API Keys - Replace with your actual API keys
ANTHROPIC_API_KEY=sk-ant-api03-your-claude-key-here
OPENAI_API_KEY=sk-your-openai-key-here
GOOGLE_AI_API_KEY=your-gemini-key-here

# Server Configuration
PORT=8080
HOST=0.0.0.0
ENV=development
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=.js,.ts,.tsx,.jsx,.py,.go,.rs,.java,.cpp,.c,.html,.css,.json,.md,.txt,.yml,.yaml

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30s
WS_MESSAGE_BUFFER_SIZE=1024

# Code Execution
EXECUTION_TIMEOUT=30s
EXECUTION_MEMORY_LIMIT=512MB
EXECUTION_CPU_LIMIT=1000m

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_DURATION=1h
RATE_LIMIT_BURST=50

# Security
BCRYPT_COST=12
SESSION_TIMEOUT=24h
CSRF_TOKEN_LENGTH=32

# AI Model Configuration
DEFAULT_AI_MODEL=claude-3-5-sonnet-20241022
MAX_TOKENS=4000
TEMPERATURE=0.7
TOP_P=0.95

# Production Settings
ENABLE_METRICS=true
ENABLE_TRACING=true
HEALTH_CHECK_INTERVAL=30s
GRACEFUL_SHUTDOWN_TIMEOUT=10s
